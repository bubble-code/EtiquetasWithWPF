<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="CustomDataGrid" TargetType="{x:Type DataGrid}">
        <Style.Setters>            
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="RowHeaderWidth" Value="0" />
            <Setter Property="VerticalGridLinesBrush" Value="{x:Null}"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#FFCECBCB"/>
            <!--<Setter Property="HorizontalGridLinesBrush" Value="#FF3A3A3A"/>-->
        </Style.Setters>
    </Style>
    <Style x:Key="CustomDataGridHeader" TargetType="{x:Type DataGridColumnHeader}">       
            <Style.Setters>
            <Setter Property="Foreground" Value="Blue" />
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style.Setters>
    </Style>

</ResourceDictionary>